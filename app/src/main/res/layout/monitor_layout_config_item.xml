<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        tools:text="内存"
        android:textColor="@color/monitor_check_box_checkable"
        android:gravity="center"
        android:textSize="18sp"
        android:padding="2dp"
        android:id="@+id/monitor_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Switch
        android:id="@+id/monitor_item_switch"
        app:layout_constraintLeft_toRightOf="@+id/monitor_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <GridLayout
        android:id="@+id/monitor_item_grid"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/monitor_item_title"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="3" />


</android.support.constraint.ConstraintLayout>