        <TextView
            tools:text="0"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="80dp"
            android:id="@+id/mem_monitor_avail_mem_info"
            app:layout_constraintLeft_toRightOf="@+id/mem_monitor_avail_mem_title"
            app:layout_constraintTop_toBottomOf="@id/mem_monitor_total_mem_info"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>

    <TextView
        android:text="@string/mem_monitor_is_low_mem"
        android:textSize="12sp"
        android:textColor="#FFD81B2B"
        android:id="@+id/mem_monitor_is_low_mem_info"
        app:layout_constraintTop_toBottomOf="@+id/mem_monitor_container3"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:visibility="gone"/>


    <android.support.constraint.ConstraintLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/net_monitor_tx_container"
        app:layout_constraintTop_toBottomOf="@+id/mem_monitor_is_low_mem_info">

        <TextView
            android:text="@string/net_monitor_send_flow"
            android:textColor="#acf1ee"
            android:textSize="12sp"
            android:id="@+id/net_monitor_send_flow_title"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            tools:text="0"
            android:textColor="#acf1ee"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="80dp"
            android:id="@+id/net_monitor_send_flow_info"
            app:layout_constraintLeft_toRightOf="@+id/net_monitor_send_flow_title"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/net_monitor_rx_container"
       app:layout_constraintTop_toBottomOf="@+id/net_monitor_tx_container">

        <TextView
            android:text="@string/net_monitor_receive_flow"
            android:textColor="#acf1ee"
            android:textSize="12sp"
            android:id="@+id/net_monitor_receive_flow_title"
