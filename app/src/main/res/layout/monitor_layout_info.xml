        <TextView
            tools:text="0"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="80dp"
            android:id="@+id/mem_monitor_total_pss_info"
            app:layout_constraintLeft_toRightOf="@+id/mem_monitor_total_pss_title"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            android:text="@string/mem_monitor_dalvik_pss"
            android:textColor="#ffffff"
            android:textSize="12sp"
