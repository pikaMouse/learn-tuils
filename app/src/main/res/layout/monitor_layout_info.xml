    <android.support.constraint.ConstraintLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:id="@+id/net_monitor_rate_container"
        app:layout_constraintTop_toBottomOf="@+id/net_monitor_rx_container">

