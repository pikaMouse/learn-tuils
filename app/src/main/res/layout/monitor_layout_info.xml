            android:layout_width="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/net_monitor_rate_title"
            android:gravity="center"
            android:layout_height="wrap_content" />

    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/net_monitor_rate_container"
        android:id="@+id/cpu_monitor_percentage_container">

        <TextView
            android:text="@string/cpu_monitor_percentage"
            android:textColor="#a3f593"
            android:textSize="12sp"
            android:id="@+id/cpu_monitor_percentage"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content" />

        <TextView
            tools:text="0"
            android:textColor="#a3f593"
            android:textSize="12sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="80dp"
            android:id="@+id/cpu_monitor_percentage_info"
            app:layout_constraintLeft_toRightOf="@+id/cpu_monitor_percentage"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content" />

